@model List<MVC_AcademyB.Models.ViewModels.PersonaViewModel>
@{
    ViewBag.Title = "Personas";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Nombre Completo</th>
                <th>Edad</th>
                <th>Genero</th>
            </tr>
          @foreach (var persona in Model)
                {
            <tr>
            <td>@persona.IdPersona</td>
            <td>@persona.Nombre @persona.Apellido</td>         
            <td>@persona.Edad</td>
            <td>@persona.IdGenero</td>
            </tr>
           }
            
        </table>
    </div>
</div>



